#!/bin/bash

cd $(dirname $0)

function list-files {
    find . -name '.git' -prune -o -name $(basename $0) -prune -o -type f -print | cut -b3-
}

case $1 in
    list)
        list-files
        ;;
    update)
        for src in $(list-files); do
            dest="$HOME/.${src}"
            if ! [ -e "$dest" ]; then
                mkdir -v -p $(dirname $dest)
                ln -v -s $PWD/$src $dest
            fi
        done
        ;;
    clean)
        for src in $(list-files); do
            dest="$HOME/.${src}"
            if [ -L "$dest" ]; then
                rm -v "$dest"
            fi
        done
        ;;
esac
